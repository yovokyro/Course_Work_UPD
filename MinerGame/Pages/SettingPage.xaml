<Page x:Class="MinerGame.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MinerGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">

    <Grid>
        <Button x:Name="buttonBack" Content="Вернуться" HorizontalAlignment="Center" Margin="0,385,0,0" VerticalAlignment="Top" Width="214" Height="60" Background="#59FF0000" BorderBrush="Red" FontFamily="Arial" FontSize="15" Click="buttonBack_Click"/>
        <Button x:Name="buttonSave" Content="Сохранить" HorizontalAlignment="Center" Margin="0,307,0,0" VerticalAlignment="Top" Background="#591FFF00" BorderBrush="#FF1FFF00" Width="214" Height="60" FontFamily="Arial Black" FontSize="15" Click="buttonSave_Click"/>
        <Rectangle Height="279" Margin="10,10,10,0" Stroke="Black" VerticalAlignment="Top" Fill="#6CFFFFFF"/>
        <Label Content="Громкость музыки:" HorizontalAlignment="Right" Margin="0,32,635,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="15"/>
        <Label Content="Громкость звуков:" HorizontalAlignment="Right" Margin="0,131,638,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="15"/>
        <Slider x:Name="musicVolume" HorizontalAlignment="Right" Margin="0,57,399,0" VerticalAlignment="Top" Width="377" RenderTransformOrigin="0.5,0.5" Maximum="100" Value="0.5" SmallChange="1" LargeChange="0.1" TickPlacement="BottomRight" TickFrequency="10" Height="30" AutoToolTipPlacement="BottomRight">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.2"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Slider x:Name="soundsVolume" HorizontalAlignment="Right" Margin="0,153,399,267" Width="377" RenderTransformOrigin="0.5,0.5" Value="0.5" Maximum="100" SmallChange="1" LargeChange="0.1"  TickFrequency="10" TickPlacement="BottomRight" AutoToolTipPlacement="BottomRight">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.2"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>

    </Grid>
</Page>
