<Page x:Class="MinerGame.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MinerGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="MainPage">

    <Grid Height="400" VerticalAlignment="Bottom">
        <Button x:Name="buttonСreate" Content="Создать комнату" HorizontalAlignment="Center" Margin="0,32,0,308" Width="378" Height="60" Background="#591FFF00" BorderBrush="#FF37FF00" FontFamily="Arial Black" FontSize="15" Click="buttonCreate_Click"/>
        <Button x:Name="buttonJoin" Content="Присоединиться" HorizontalAlignment="Center" Margin="0,112,0,228" Width="378" Background="#591FFF00" BorderBrush="#FF37FF00" FontFamily="Arial Black" FontSize="15" Click="buttonJoin_Click"/>
        <Button x:Name="buttonExit" Content="Выйти" HorizontalAlignment="Center" Background="#59FF0000" FontFamily="Arial" FontSize="15" Width="378" Click="buttonExit_Click" Margin="0,272,0,68"/>
        <Button x:Name="buttonSettingOpen" Content="Настройки" HorizontalAlignment="Center" Margin="0,192,0,148" Width="378" Background="#591FFF00" BorderBrush="#FF2BFF00" FontFamily="Arial Black" FontSize="15" Click="buttonSettingOpen_Click"/>
    </Grid>
</Page>
